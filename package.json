{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "My Electron App",
  "author": "takuya-ichikawa",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --no-sandbox",
    "build": "electron-vite build",
    "start": "electron-vite preview -- --no-sandbox",
    "release": "electron-vite build && electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.example.my-electron-app",
    "productName": "MyElectronApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": {
      "provider": "github",
      "owner": "takuya-ichikawa",
      "repo": "windows-app-template"
    }
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@fontsource/noto-sans-jp": "^5.2.9",
    "@mantine/core": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^26.0.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.2.0",
    "vite": "^7.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3"
  }
}
